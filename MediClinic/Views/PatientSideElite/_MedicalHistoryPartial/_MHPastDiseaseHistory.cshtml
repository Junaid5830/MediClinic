@model MediClinic.Models.PatientViewModel

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-content">
                <div class="container">
                    <div class="card-title">
                        <div class="row">
                            <div class="col-sm-12">
                                <h4 class="card-title">PAST DISEASE HISTORY</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m12">
                            <div id="MHPastDiseaseHistoryGrid">
                                @*<partial name="../_PatientPartialView/_ManageMHPastDiseaseHistory" />*@
                                <partial name="../_MedicalHistoryPartial/_ManageMHPastDiseaseHistory.cshtml" />

                            </div>
                        </div>
                    </div>
                    <form asp-action="SavePMHPastDiease" asp-controller="PatientMedicalHistory" method="post" data-ajax="true" data-ajax-success="onMHPastDiseaseHistorySucess(data)" id="PastMedicalForm">
                        <input type="hidden" id="dieaseId" asp-for="MHPastDiseaseHistory.Id" />
                        <div class="row">
                            <div class=" col-md-6 ">
                                <p>Disease Name <span class="required"> * </span></p>
                               
                                    <select data-placeholder="Select Disease Name" class="select2 dieaseName" id="dieaseIdSelect" asp-for="MHPastDiseaseHistory.Name" asp-items="@(new SelectList(Model.DiseaseList, "Value", "Text"))">
                                        <option value="" selected disabled></option>
                                    </select>
                                    <span class="required" id="MHPastDiseaseHistory_Name_err"></span>
                               
                            </div>
                            <div class=" col-md-6">
                                <p class="content-p">Notes</p>
                                <input class="text-input" asp-for="MHPastDiseaseHistory.Notes" type="text" placeholder="Notes">
                                <span class="required" asp-validation-for="MHPastDiseaseHistory.Notes"></span>
                            </div>
                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col s12 m12" style="text-align:center">
                                <button type="submit" id="SavePastMedicalForm" class="btn add-btn">Save</button>
                                <button type="reset" class="Recreate btn">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
              
            </div>
        </div>
    </div>
</div>


