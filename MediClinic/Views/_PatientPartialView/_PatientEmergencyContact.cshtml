                                                    <span class="required" asp-validation-for="patientEmergencyContact.FirstName"></span>
                                                </div>
                                            </div>
                                            <div class="col s12 m6 ">
                                                <p>Middle Name</p>
                                                <div class="input-field col s12 pl-0">
                                                    <input class="text-input emergncyMiddleName emergency_tab patientEmergencyTxtField" onkeypress="return AvoidSpace(event)" asp-for="patientEmergencyContact.MiddleName" type="text" placeholder="Enter Middle Name">
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col s12 m6">
                                                <p>Last Name<span class="required"> * </span></p>
                                                <div class="input-field col s12 pl-0">
                                                    <input class="text-input emergncyLastName emergency_tab patientEmergencyTxtField" onkeypress="return AvoidSpace(event)" asp-for="patientEmergencyContact.LastName" type="text" placeholder="Enter Last Name">
                                                    <span class="required" asp-validation-for="patientEmergencyContact.LastName"></span>
