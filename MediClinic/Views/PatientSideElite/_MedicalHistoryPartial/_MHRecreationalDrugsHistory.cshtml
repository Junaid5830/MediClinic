@model MediClinic.Models.PatientViewModel

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-content">
                <div class="container">
                    <div class="card-title">
                        <div class="row">
                            <div class="col">
                                <h4 class="card-title">RECREATIONAL DRUGS HISTORY</h4>
                            </div>
                        </div>
                    </div>
                    <div id="MHRecreationalDrugsHistoryGrid">
                        @*<partial name="../_PatientPartialView/_ManageMHRecreationalDrugsHistory.cshtml" />*@
                        <partial name="../_MedicalHistoryPartial/_ManageMHRecreationalDrugsHistory.cshtml" />

                    </div>
                    <form asp-action="SaveMHRecreationalDrugsHistory" asp-controller="PatientMedicalHistory" method="post" data-ajax="true" data-ajax-success="onMHRecreationalDrugsHistorySucess(data)" id="RecreationalForm">
                        <input type="hidden" asp-for="MHRecreationalDrugsHistory.Id" id="MHRecreationalDrugHistoryId" />
                        <div class="row current">
                            <div class="col">
                                <p>Drugs <span class="required"> * </span></p>
                                <div id="drugId">
                                    <select data-placeholder="select Drug" class="select2" asp-for="MHRecreationalDrugsHistory.Drugs" id="MHRecreationalDrugsHistoryDrugs">
                                        <option value="" disabled selected></option>
                                        <option value="Currently Taking Drugs">Currently Taking Drugs</option>
                                        <option value="Formerly Taking Drugs">Formerly Taking Drugs</option>
                                        <option value="Never Take Drugs">Never Take Drugs</option>
                                    </select>
                                    <span class="required" id="MHRecreationalDrugsHistory_Drugs_err"></span>
                                </div>
                            </div>
                            <div class="col">
                                <p class="content-p">
                                    Type <span class="required"> * </span>
                                </p>

                                <input class="text-input" asp-for="MHRecreationalDrugsHistory.RecreationalDugsType" type="text" id="MHRecreationalDrugsType" placeholder="Type">
                                <span class="required" asp-validation-for="MHRecreationalDrugsHistory.RecreationalDugsType"></span>

                            </div>
                        </div>
                        <div class="row current">
                            <div class="col">
                                <p>Amount Per Week</p>
                                <div id="amountId">
                                    <select data-placeholder="select Amount Per Week" class="select2" asp-for="MHRecreationalDrugsHistory.RecreationDrugsAmount" id="MHRecreationalDrugsAmountPerWeek">
                                        <option value="" selected disabled></option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                    </select>
                                    <span class="required" asp-validation-for="MHRecreationalDrugsHistory.RecreationDrugsAmount"></span>
                                </div>
                            </div>
                            <div class="col">
                                <p>
                                    Last Used
                                </p>
                                <div id="lastYearId">
                                    <select data-placeholder="Select Last Used" class="select2 yearselector" asp-for="MHRecreationalDrugsHistory.RecreationalDrugsLastUsed" id="MHRecreationalDrugsLastUsed">
                                        <option value="" selected disabled></option>
                                    </select>
                                    <span class="required" asp-validation-for="MHRecreationalDrugsHistory.RecreationalDrugsLastUsed"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <p class="content-p">Notes</p>
                                <input class="text-input" asp-for="MHRecreationalDrugsHistory.RecreationDrugsNotes" type="text" placeholder="Notes" id="MHRecreationalNotes">
                                <span class="required" asp-validation-for="MHRecreationalDrugsHistory.RecreationDrugsNotes"></span>
                            </div>

                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col s12 m12" style="text-align:center">
                                <button type="submit" id="SaveRecreationalForm" class="btn add-btn">Save</button>
                                <button type="reset" class="Recreate btn">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
           
            </div>
        </div>
    </div>
</div>