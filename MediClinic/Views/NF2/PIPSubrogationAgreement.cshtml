                }
            });
            $('.injuryno').change(function () {
                if ($(this).prop("checked")) {
                    $('#injurydiv').hide();
                }
            });
            $('.lossyes').change(function () {
                if ($(this).prop("checked")) {
                    $('#lossdiv').show();
                }
            });
            $('.lossno').change(function () {
                if ($(this).prop("checked")) {
                    $('#lossdiv').hide();
