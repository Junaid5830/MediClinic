@model MediClinic.Models.PatientViewModel
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-content">
                <div class="container">
                    <div class="card-title">
                        <div class="row">
                            <div class="col">
                                <h4 class="card-title">ALLERGIES HISTORY</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div id="MHAllergiesHistoryGrid">
                                @*<partial name="../_PatientPartialView/_ManageMHAllergiesHistory" />*@
                                <partial name="../_MedicalHistoryPartial/_ManageMHAllergiesHistory.cshtml" />

                            </div>
                        </div>
                    </div>
                    <form asp-action="SaveMHAllergiesHistory" asp-controller="PatientMedicalHistory" method="post" data-ajax="true" data-ajax-success="onMHAllergiesHistorySucess(data)" id="PatientAllergyForm">
                        <input type="hidden" asp-for="MHAllergiesHistory.Id" />
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <p class="content-p">
                                    Allergy To <span class="required"> * </span>
                                </p>
                                <input class="text-input" asp-for="MHAllergiesHistory.AllergyTo" type="text" placeholder="Allergy To">
                                <span class="required" asp-validation-for="MHAllergiesHistory.AllergyTo"></span>
                            </div>

                            <div class="col-sm-12 col-md-6">
                                <p class="content-p">
                                    Reaction <span class="required"> * </span>
                                </p>
                                <input class="text-input" asp-for="MHAllergiesHistory.Recation" type="text" placeholder="Reaction">
                                <span class="required" asp-validation-for="MHAllergiesHistory.Recation"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <p class="content-p">Notes</p>
                                <input class="text-input" asp-for="MHAllergiesHistory.Notes" type="text" placeholder="Notes">
                                <span class="required" asp-validation-for="MHAllergiesHistory.Notes"></span>
                            </div>

                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col" style="text-align:center">
                                <button type="submit" id="SavePatientAllergyForm" class="btn add-btn">Save</button>
                                <button type="reset" class="Recreate btn">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>