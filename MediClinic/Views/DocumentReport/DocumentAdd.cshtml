@model MediClinic.Models.DocumentViewModel
@{
    ViewData["Title"] = "DocumentAdd";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}



@section styles{
    @*<link href="~/Elite/node_modules/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Elite/node_modules/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />*@
    <style>


        .AddReminder p {
            margin-top: 1rem !important;
        }
    </style>
}
@section scripts{
    @*<script src="~/Elite/node_modules/select2/dist/js/select2.full.min.js" type="text/javascript"></script>*@

    <script>
        $(function () {

            $(".select2").select2({
                selectOnClose: false,
                placeholder: "Select Document/Report Type"
            });
            $('.selectpicker').selectpicker();
        });


    </script>

    <script>
        $(document).ready(function () {
            $('.dropify').dropify();
        });
    </script>
}
<div class="page-wrapper">
    <div class="container">
        <div id="breadcrumbs-wrapper">
            <!-- Search for small screen-->

            <div class="row">
                <div class=" col">
                    <h5 class="breadcrumbs-title color-blue">
                        Documents/Records
                    </h5>
                </div>

                <div class="col">
                    <a class="waves-effect waves-light float-right" style="margin-top:-11px" href="/DocumentReport/Document">
                        <i class="mdi mdi-arrow-left right arrow-icon"></i>

                    </a>
                </div>

            </div>

        </div>
        <section class="AddReminder">
            <form asp-action="DocumentAdd" asp-controller="DocumentReport" method="post" enctype="multipart/form-data">
               

                    <div class="row">
                        <div class="col-md-6 ">
                            <p>
                                Scanned By

                            </p>

                            <div class="input-field">
                                <select asp-for="Document.DocumentName" class="select2 form-control  text-input" placeholder="Select Document/Report Type" style="width: 100%;">
                                    <option selected disabled value=""></option>

                                    <option value="Initial Report">Doctor Initial Report</option>
                                    <option value="DME Prescription">Initial DME Prescription</option>
                                    <option value="Declofenac Prescription">
                                        Declofenac Prescription
                                    </option>
                                    <option value="Liecense">
                                        Driver's Liecense
                                    </option>

                                </select>
                            </div>
                            
                            </div>
                        <div class="col-md-6 ">
                            <p>
                                Source of the document

                            </p>
                            <div class="input-field">
                                <input type="file" asp-for="Document.File" id="input-file-now-custom-2" class="dropify" data-height="100" />
                            </div>
                        </div>


                    </div>
                    

                    <div class="row mt-2 mb-2">
                        <div class="col s12">
                            <div class="center">
                                <button type="submit" class="waves-effect waves-light btn add-btn">Save</button>

                            </div>
                        </div>
                    </div>

         
            </form>
        </section>
