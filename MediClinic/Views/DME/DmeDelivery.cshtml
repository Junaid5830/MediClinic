@model MediClinic.Models.DTOs.DMESuppliesDto.DMEDeliveryTemplateDto

@{
    Layout = null;
    var empty = "N/A";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DmeDeliveryPrint</title>



    <link rel="stylesheet" type="text/css" href="~/app-assets/css/custom/custom.css">

    <!-- END: VENDOR CSS-->
    <!-- BEGIN: Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/themes/vertical-dark-menu-template/materialize.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/themes/vertical-dark-menu-template/style.css">



    <style>
        [type='checkbox'].filled-in:checked + span:not(.lever):before {
            top: -11px !important;
        }

        .h6heading {
            margin-top: 15% !important
        }

        .patient-image {
            width: 200px;
            height: 200px;
            margin: 0 75px;
        }

        p.text-dark {
            font-weight: 600 !important;
        }

        hr {
            overflow: hidden;
            height: 1px;
            background-color: #e0e0e0;
            width: 100%;
        }

        .card {
            padding: 15px !important;
        }

        .card-content {
            padding-left: 0px !important;
            padding-right: 0px !important;
        }

        .btn-success:hover {
            color: rgb(255, 255, 255);
            background-color: rgb(33, 136, 56);
            border-color: rgb(30, 126, 52);
        }

        .btn-success {
            margin-right: 20px;
            background-color: rgb(33, 136, 56);
            border-color: rgb(30, 126, 52);
        }

        .btn:focus, .btn-large:focus, .btn-small:focus, .btn-floating:focus {
            background-color: rgb(33, 136, 56) !important;
            border-color: rgb(30, 126, 52) !important;
        }

        [type='checkbox']:checked + span:not(.lever):before {
            margin-top: 14px !important;
        }

        .set_Checkbox p {
            margin-top: 12px !important;
            margin-bottom: 12px !important;
        }

        [type='checkbox'] + span:not(.lever):before {
            margin-top: 14px !important;
        }

        .margin-top-8 {
            margin-top: 15px !important;
        }
    </style>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dateArea').html(new Date().toLocaleString().replace(",", "").replace(/:.. /, " "));
            debugger;
            if ('@Model.PatientGender') {
                if ('@Model.PatientGender' == "Male") {
                    $('#Male').prop('checked', 'checked');
                }
                else {
                    $('#Female').prop('checked', 'checked');
                }
            }
        })
        function printdiv() {
            $("#arrowIcon").hide();
            $(".btn-success").hide();
            window.print();
            $("#arrowIcon").show();
            $(".btn-success").show();

        }
    </script>

</head>
<body>
    <div class="content-area content-right">
        <div class="app-wrapper">




            <div class="container">
                <div class="row">
                    <div class="col s6 m6  margin-top-8">
                        <h5 class="breadcrumbs-title color-blue card-title">DME Delivery</h5>
                    </div>


                    <div class="col s6 m6 margin-top-8">
                        <a id="arrowIcon" class="waves-effect waves-light float-right mr-2 mt-2" href="DmeSupplies">
                            <i class="material-icons right arrow-icon">arrow_back</i>

                        </a>
                    </div>
                </div>
                <div class="container" id="main-div-Print">
                    <div class="row">

                        <div class="input-field col m1 s3">
                            <p>Patient:</p>
                        </div>
                        <div class="input-field col s2 m1">
                            <label>
                                <input type="radio" name="Gender" id="Male" class="filled-in" />
                                <span>M</span>
                            </label>
                        </div>
                        <div class="input-field col s2 m1">
                            <label>
                                <input type="radio" name="Gender" id="Female" class="filled-in" />
                                <span>F</span>
                            </label>
                        </div>
                        <div class="input-field col s5 m3">
                            <p>Serial # <span><b>N/A</b></span></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6 m6">
                            <p>Patient: <span><b>@Model.PatientName</b></span></p>
                        </div>
                        <div class="col s6 m6">
                            <p>Deliver Address: <span><b>@Model.Address</b></span></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6 m6">
                            <p>Phone #: <span><b>
                                @if (!(Model.Phone is null))
                                {
                                    @Model.Phone
                                }
                                else
                                {
                                    @empty
                                }
                                </b></span></p>
                        </div>
                        <div class="col s6 m6">
                            <p>Delivery PERS: <span><b>N/A</b></span></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6 m6">
                            <p>Date & Time: <span><b id="dateArea"></b></span></p>
                        </div>
                        <div class="col s6 m6">
                            <p>CPM Manuf: <span><b>N/A</b></span></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m12">
                            <h6> Surgery Type:</h6>
                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>Left Shoulder</p></div>

                            </div>


                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>Right Shoulder</p></div>

                            </div>


                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>Left Knee</p></div>

                            </div>


                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>Right Knee</p></div>

                            </div>


                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>HIP</p></div>

                            </div>


                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>Left Ankle</p></div>

                            </div>


                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>Right Ankle</p></div>

                            </div>


                        </div>
                        <div class="col m3 s6">
                            <div class="row">
                                <div class="col  m4 s3 center">
                                    <label>
                                        <input type="checkbox">
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col  m8 s9 ">  <p>Wrist CPM</p></div>

                            </div>


                        </div>

                    </div>
                    <div class="row">
                        <div class="input-field col s3 m1">
                            <p>
                                CRYO/CTU:
                            </p>
                        </div>
                        <div class="input-field col s2 m1">
                            <label>
                                <input type="radio" name="CRYO" class="filled-in" />
                                <span>Yes</span>
                            </label>
                        </div>
                        <div class="input-field col s2 m1">
                            <label>
                                <input type="radio" name="CRYO" class="filled-in" />
                                <span>No</span>
                            </label>
                        </div>
                        <div class="input-field col s5  m9">
                            <p>Schedule Pick Up:</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m4">
                            <p>Doctor: <span><b>@Model.ProviderName</b></span></p>
                        </div>
                        <div class="col s12 m8">
                            <p>Comments: <span><b>N/A</b></span></p>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <button class="btn btn-success float-right" onclick="printdiv()">Print</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
