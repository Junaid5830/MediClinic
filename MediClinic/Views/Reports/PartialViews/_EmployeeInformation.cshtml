@model MediClinic.Models.ReportsViewModel

<form asp-action="EmployeeInformation" asp-controller="Reports" method="post" data-ajax="true" data-ajax-success="OnSuccessPatientInfomation(data)">
    <div class="row">


        <div class="col">
            <p>
                Employer when injury occurred
            </p>
            <div class="input-field">
                <input type="text" class="text-input" placeholder="Enter Company/Agency Name" asp-for="reportemployeeDto.CompanyOrAgency" />
            </div>
        </div>
        <div class="col">
            <p>Phone No</p>
            <div class="input-field">
                <input type="text" class="text-input phoneno" placeholder="Enter Phone" asp-for="reportemployeeDto.PhoneNo" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>Employee Address</p>
            <div class="input-field">
                <input type="text" class="text-input" placeholder="Enter Numner and street" asp-for="reportemployeeDto.Address" />

            </div>
        </div>
        <div class="col">
            <p>City</p>
            <div class="input-field">
                <input type="text" class="text-input" placeholder="Enter City" asp-for="reportemployeeDto.City" />

            </div>
        </div>
        <div class="col">
            <p>State</p>
            <div class="input-field">
                <input type="text" class="text-input" placeholder="Enter State" asp-for="reportemployeeDto.State" />

            </div>
        </div>
        <div class="col">
            <p>Zip</p>
            <div class="input-field">
                <input type="text" class="text-input" placeholder="Enter zip" asp-for="reportemployeeDto.zip" />

            </div>
        </div>

    </div>
    <div class="row mt-2 mb-2">
        <div class="col s12">
            <div class="center">
                <button type="submit" id="saveBtn" class="btn add-btn">Save</button>

                @*<a href="@Url.Action("Employeelist","employee")" class="Recreate btn">Cancel</a>*@
            </div>
        </div>
    </div>
</form>