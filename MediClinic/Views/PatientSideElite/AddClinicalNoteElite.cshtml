
@{
    ViewData["Title"] = "AddClinicalNoteElite";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}
@section styles{
    
    <style>
    
        textarea {
            height: 200px;
            resize: none;
            width:100% !important;
        }

         .AddNotes p{
             margin-top:1rem !important;
         }
        .textarea {
    border: 1px solid #cfcfcf !important;
    border-radius: 4px !important;
}
    </style>
}
@section scripts{

    <script>
        $(function () {

            //$(".select2").select2();
            $('.selectpicker').selectpicker();
        });


    </script>
}
<div class="page-wrapper">
    <div class="container">
        <div id="breadcrumbs-wrapper">
              <div class="row">
                    <div class=" col">
                        <h5 class="breadcrumbs-title color-blue"> Add New Bill</h5>
                    </div>

                    <div class="col">
                        <a href="@Url.Action("ClinicalNotesElite","PatientSideElite")" class="waves-effect waves-light float-right" style="margin-top:-11px">
                            <i class="mdi mdi-arrow-left right arrow-icon"></i>

                        </a>
                    </div>

                </div>
        </div>
                 
                <div class="row">
                    <form class="col-sm-12">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <p>Bill Date</p>

                                <div class="input-field">
                                    <input type="date" class="text-input" placeholder="select date">
                                </div>

                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2 col ">
                                <p>Note no</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Note no">
                                </div>

                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2 col ">
                                <p>Note By</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Note By">
                                </div>

                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col ">
                                <p>Note Type</p>

                                <div class="input-field">
                                    <select class="select2 form-control  text-input" style="width: 100%;">
                                        <option>Select</option>

                                        <option value="AK">Note One</option>
                                        <option value="HI">Note Two</option>


                                    </select>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-12 col ">
                                <p>Write Note</p>

                                <textarea name="comment" class="textarea input-styling border-radius-4"> </textarea>

                            </div>

                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col s12">
                                <div class="center">
                                    <a href="javascript:void(0);" class="waves-effect waves-light btn add-btn">Save</a>
                                    <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Edit</a>
                                    <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>           
    </div>
</div>


