

@{
    ViewData["Title"] = "AddNewProcedure";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}


@section styles{
  
}
@section scripts{

    <script>

        $(".select2").select2();
            $('.selectpicker').selectpicker();
      
        $(document).ready(function () {
            $('.dropify').dropify();
        });

    </script>
   
}
<div class="page-wrapper">
    <div class="container">
        <div id="breadcrumbs-wrapper">
                <div class="row">
                    <div class=" col" margin-top-8">
                        <h5 class="breadcrumbs-title color-blue"> New Surgery</h5>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("SurgeryCenter","provider")" class="waves-effect waves-light float-right" style="margin-top:-11px">
                            <i class="mdi mdi-arrow-left right arrow-icon"></i>

                        </a>
                    </div>
                </div>           
        </div>
       
                <div class="row">
                    <form class="col-sm-12  ">
                        <div class="row">
                            <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                                <p>First Name</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter First Name">
                                </div>
                            </div>
                            <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                                <p>MR Number</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter MR Number">
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                                <p>
                                    Gender

                                </p>

                                <div class="input-field">
                                    <select class="select2 form-control  text-input" style="width: 100%;">
                                        <option>Select Gender</option>

                                        <option value="AK">Male</option>
                                        <option value="HI">Female</option>


                                    </select>
                                </div>

                            </div>
                            <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                                <p>DOB</p>

                                <div class="input-field">
                                    <input type="date" class="text-input" placeholder="select date">
                                </div>
                            </div>



                        </div>
                           

                        
                        <div class="row">
                            <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                                <p>Phone Number</p>

                                <div class="input-field">
                                    <input type="number" class="text-input" placeholder="Enter Phone Number">
                                </div>
                            </div>
                            <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                                <p>Email</p>

                                <div class="input-field">
                                    <input type="email" class="text-input" placeholder="Enter Email">
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col s12">
                                <div class="center">
                                    <a href="javascript:void(0);" class="waves-effect waves-light btn add-btn">Save</a>
                                    <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Edit</a>
                                    <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
       

    </div>
</div>





