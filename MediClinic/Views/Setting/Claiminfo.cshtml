@model MediClinic.Models.PatientViewModel
@{
    ViewData["Title"] = "Claiminfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/app-assets/base/jquery-ui.css" rel="stylesheet" />

}
@section scripts{
    <script src="~/app-assets/base/jquery-ui.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/app-assets/js/jquery.form.js"></script>
    <script>
        function EditIncident(id, Name) {
            debugger;
            $('#ClaimStatusIdVal').val('');
            $('#ClaimStatusNameVal').val('');

            $('#ClaimStatusIdVal').val(id);
            $('#ClaimStatusNameVal').val(Name);

        }
    </script>
}
<div id="breadcrumbs-wrapper">
    <!-- Search for small screen-->
    <div class="container">
        <div class="row">
            <div class="col s6 m6">
                <h5 class="breadcrumbs-title color-blue mt-0">
                    Claim Status

                </h5>
            </div>
            <div class="col s6 m6 ">
                <a class="waves-effect waves-light float-right mr-2" style="margin-top: -1px;" href="/Setting/Setting">
                    <i class="material-icons right arrow-icon">arrow_back</i>

                </a>
            </div>
        </div>
    </div>
</div>
<div id="batch_action">
    <div class="container">
        <div class="row">

            <div class="col s9 m9 l9">
                <a class='dropdown-trigger dropdown-select float-left' href='javascript:void(0);' data-target='dropdown10'>Batch Action<i class="material-icons right select-drop-icon">keyboard_arrow_down</i></a>
                <ul id='dropdown10' class='dropdown-content dropbody'>
                    <li><a href="javascript:void(0);">Option 1</a></li>
                    <li><a href="javascript:void(0);">Option 2</a></li>
                </ul>

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12 m6">
        <div class="container">
            <div id="ClaimStatus_list">
                <partial name="~/Views/Setting/SettingPartialView/_ClaimStatusList.cshtml" />

            </div>
        </div>
    </div>
    <div class="col s12 m6 mt-4">
        <div class="container">
            <form asp-action="Claiminfo" asp-controller="Setting" method="post" id="ClaimStatus_Form" class="form-inline">
                <input  asp-for="claimStatusBasicDto.ClaimStatusId" type="hidden"  id="ClaimStatusIdVal"/>
                <h6>Add New Patient Claim Status</h6>
                <div class="input-field">
                    <input class="text-input" id="ClaimStatusNameVal" asp-for="claimStatusBasicDto.ClaimStatus1" type="text" placeholder="Enter Claim Status">
                </div>

                <div class="row mb-2">
                    <div class="col s12 m12" style="text-align:center">
                        <button type="submit" class="add-btn btn">Save</button>

                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
