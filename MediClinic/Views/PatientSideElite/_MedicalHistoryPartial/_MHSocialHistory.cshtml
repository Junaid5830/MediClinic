@model MediClinic.Models.PatientViewModel
<style>
    .history-title h3 {
        margin: 15px 0;
        font-size: 16px;
        font-weight: 500;
        padding: 15px 0;
        border-bottom: 1px solid #ddd;
    }
</style>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-content">
                <div class="container">
                    <div class="card-title">
                        <div class="row">
                            <div class="col">
                                <h4 class="card-title">SOCIAL HISTORY</h4>
                            </div>
                        </div>
                    </div>
                    <form asp-action="SaveMHSocialHistory" asp-controller="PatientMedicalHistory" method="post" id="MHSocialHistoryForm">
                        @Html.TextBoxFor(model => model.MHSocialHistory.PatientId, new { @class = "form-control", @Id = "", @style = "display:none" })
                        @Html.TextBoxFor(model => model.MHSocialHistory.Id, new { @class = "form-control", @Id = "MHSocialHistoryId", @style = "display:none" })
                        <div class="row">
                            <div class="col history-title">
                                <h3>Smoking History</h3>
                            </div>
                        </div>
                        <div class="row current">
                            <div class="col">
                                <p>Smoking </p>

                                <select class="select2" data-placeholder="Select Smoking Type" asp-for="MHSocialHistory.Smoking">
                                    <option value="" disabled selected></option>
                                    <option value="Current Smoker">Current Smoker</option>
                                    <option value="Former Smoker">Former Smoker</option>
                                    <option value="Never Smoker">Never Smoker</option>
                                </select>

                                <span class="required" asp-validation-for="MHSocialHistory.Smoking"></span>
                            </div>
                            <div class="col-md-6">
                                <p>Tobacco Type </p>

                                <select class="select2" data-placeholder="Select Tobacco Type" asp-for="MHSocialHistory.TobaccoType">
                                    <option value="" selected disabled></option>
                                    <option value="Cigarettes">Cigarettes</option>
                                    <option value="Pipe">Pipe</option>
                                    <option value="Cigar">Cigar</option>
                                    <option value="Chewing">Chewing</option>
                                    <option value="Hookah">Hookah</option>
                                    <option value="Sheesha">Sheesha</option>
                                </select>

                            </div>
                        </div>
                        <div class="row" id="TobaccoDiv">
                            <div class="col-md-6">
                                <p class="content-p">Number Of Years</p>
                                <input class="text-input" asp-for="MHSocialHistory.TobaccoUsedYear" type="text" id="MHSocialHistoryTobaccoUsedYear" placeholder="Number Of Years">
                                <span class="required" asp-validation-for="MHSocialHistory.TobaccoUsedYear"></span>
                            </div>
                            <div class="col-md-6">
                                <p class="content-p">Amount Per Day</p>
                                <input class="text-input" asp-for="MHSocialHistory.TobaccoAmountPerDay" type="text" id="MHSocialHistoryTobaccoAmountPerDay" placeholder="Amount Per Day">
                                <span class="required" asp-validation-for="MHSocialHistory.TobaccoAmountPerDay"></span>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    Quit Year
                                </p>

                                <select data-placeholder="Select Quit Year" class="select2 yearselector" asp-for="MHSocialHistory.TobaccoYearQuit">
                                    <option value="" selected disabled></option>
                                </select>
                                <span class="required" asp-validation-for="MHSocialHistory.TobaccoYearQuit"></span>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="content-p">Notes</p>
                                <input class="text-input" asp-for="MHSocialHistory.SmokingNotes" id="SmokingNotes" type="text" placeholder="Notes">
                                <span class="required" asp-validation-for="MHSocialHistory.SmokingNotes"></span>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col history-title">
                                <h3>Caffeine History</h3>
                            </div>
                        </div>

                        <div class="row current">
                            <div class="col-md-6">
                                <p>Caffeine  </p>

                                <select class="select2" data-placeholder="Select Caffeine" asp-for="MHSocialHistory.Caffeine" id="MHSocialHistoryCaffeine">
                                    <option value="">Select Caffeine </option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>

                                <span class="required" asp-validation-for="MHSocialHistory.Caffeine"></span>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    Number Of Caffeinated Drinks Per Day
                                </p>
                             
                                    <select class="select2" id="cafinatedDrinks" data-placeholder="Select Number Of Caffeinated Drinks Per Day" asp-for="MHSocialHistory.CaffeineDrinks" id="MHSocialHistoryCaffeineDrinks">
                                        <option value="" selected disabled></option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                    </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <p class="content-p">Notes</p>
                                <input class="text-input" asp-for="MHSocialHistory.CaffeineNotes" id="CaffeineNotes" type="text" placeholder="Notes">
                                <span class="required" asp-validation-for="MHSocialHistory.CaffeineNotes"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col history-title">
                                <h3>Alcohol History</h3>
                            </div>
                        </div>
                        <div class="row current">
                            <div class="col-md-6">
                                <p>Alcohol</p>

                                <select class="select2" data-placeholder="Select Alcohol" asp-for="MHSocialHistory.Alcohol" id="MHSocialHistoryAlcohol">
                                    <option value="" selected disabled></option>
                                    <option value="No">No</option>
                                    <option value="Social">Social</option>
                                    <option value="Almost Daily">Almost Daily</option>
                                    <option value="Daily">Daily</option>
                                    <option value="Former Drinker">Former Drinker</option>
                                    <option value="Former Heavy Drinker">Former Heavy Drinker</option>
                                    <option value="Ocassional Drinker">Ocassional Drinker</option>
                                </select>
                                <span class="required" asp-validation-for="MHSocialHistory.Alcohol"></span>

                            </div>
                            <div class="col-md-6">
                                <p class="content-p">
                                    Number Of Drinks Per Week
                                </p>
                                <input class="text-input" asp-for="MHSocialHistory.AlcoholDrinks" type="text" id="MHSocialHistoryAlcoholDrinks" placeholder="Number Of Drinks Per Week">
                                <span class="required" asp-validation-for="MHSocialHistory.AlcoholDrinks"></span>
                            </div>
                        </div>
                        <div class="row current">
                            <div class="col-md-6">
                                <p>Preferred Drink</p>
                             
                                    <select id="preferredDrink" class="select2" data-placeholder="Select Preferred Drink" asp-for="MHSocialHistory.AlcoholPreferredDrink" id="MHSocialHistoryAlcoholPreferredDrink">
                                        <option value="" selected disabled></option>
                                        <option value="Beer">Beer</option>
                                        <option value="Wine">Wine</option>
                                        <option value="Vodka">Vodka</option>
                                        <option value="Whiskey">Whiskey</option>
                                        <option value="Champaign">Champaign</option>
                                        <option value="Hard Liquor">Hard Liquor</option>
                                        <option value="Moon Shine">Moon Shine</option>
                                    </select>
                                </div>
                          
                            <div class="col-md-6">
                                <p>
                                    Quit Year
                                </p>
                              
                                    <select class="select2 yearselector" id="alcoholDrink"  asp-for="MHSocialHistory.AlcoholYearQuit">
                                        <option value="">Select Quit Year</option>
                                    </select>
                                    <span class="required" asp-validation-for="MHSocialHistory.AlcoholYearQuit"></span>
                                
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <p class="content-p">Notes</p>
                                <input class="text-input" asp-for="MHSocialHistory.AlcoholNotes" type="text" placeholder="Notes">
                                <span class="required" asp-validation-for="MHSocialHistory.AlcoholNotes"></span>
                            </div>

                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col s12 m12" style="text-align:center">
                                <button type="submit" id="SaveMHSocialHistoryFormBTN" class="btn add-btn">Save</button>
                                <button type="reset" class="Recreate btn">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
               
            </div>
        </div>
    </div>
</div>
