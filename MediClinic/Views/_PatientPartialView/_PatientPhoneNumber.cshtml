@model MediClinic.Models.PatientViewModel
<div class="content-area content-right">
    <div class="app-wrapper">
        <div class="card card card-default scrollspy border-radius-6 fixed-width">
            <div class="card-content padding-3">
                <div class="row mb-1">


                    <div class="col s12">
                        <div class="container">
                            <div class="row">
                                <div class="col s6 m6 margin-top-8">
                                    <h5 class="breadcrumbs-title color-blue">Phone Number</h5>
                                </div>



                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <form asp-action="PatientPhoneNumber" class="patientPhoneNumberForm" asp-controller="PatientSide" id="patientPhoneNumberForm" method="post">
                                        <input class="text-input input-styling" asp-for="patientPhoneNumber.UserId" type="text" hidden="hidden">
                                        <input hidden="hidden" asp-for="patientPhoneNumber.PhoneNumberId" />
                                        <input hidden="hidden" id="hiddenPatientPhoneUserId" class="patientinfobasichiddenUserId" asp-for="patientInfoBasicDto.UserId" />
                                        <div class="row">
                                            <div class="col s12 m6">
                                                <p>Home</p>
                                                <div class="input-field col s12 pl-0 numberModalDiv phoneDiv">
                                                    <input class="text-input phoneno phoneNumber_tab patientPhoneTxtField numberFieldForModal" type="text" id="home_phone" asp-for="patientPhoneNumber.HomePhone" placeholder="Enter Home Phone Number">
                                                    <span class="required" id="errmsg_Home"></span>

                                                </div>

                                            </div>
                                            <div class="col s12 m6">
                                                <p>Work</p>
                                                <div class="input-field col s12 pl-0 numberModalDiv phoneDiv">
                                                    <input class="text-input phoneno phoneNumber_tab patientPhoneTxtField numberFieldForModal" type="text" id="work_number" asp-for="patientPhoneNumber.WorkPhone" placeholder="Enter Work Phone Number">
                                                    <span class="required" id="errmsg_work"></span>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col s12 m6">
                                                <p>Mobile<span class="required"> * </span></p>
                                                <div class="input-field col s12 pl-0 numberModalDiv phoneDiv">
                                                    <input class="text-input phoneno phoneNumber_tab patientPhoneTxtField numberFieldForModal" type="text" id="mobile_num" asp-for="patientPhoneNumber.MobilePhone" placeholder="Enter Mobile Number">
                                                    <span class="required" asp-validation-for="patientPhoneNumber.MobilePhone"></span>
                                                    <span class="required" id="errmsg_mobile"></span>

                                                </div>

                                            </div>
                                            <div class="col s12 m6 ">
                                                <p>Emergency Number?</p>
                                                <div class="col s4 m4 input-field pl-0 mt-3 numberModalDiv phoneDiv">
                                                    <p class="check-btn">
                                                        <label>
                                                            <input type="radio" id="emergencyPhoneYes" class="with-gap patientPhoneTxtField numberFieldForModal" name="phoneYes" value="2" />
                                                            <span>Yes</span>
                                                        </label>
                                                    </p>

                                                </div>
                                                <div class="col s4 m4 input-field pl-0 mt-3">
                                                    <p class="check-btn">
                                                        <label>
                                                            <input type="radio" id="emergencyPhoneNo" class="with-gap patientPhoneTxtField" name="phoneYes" value="3" />
                                                            <span>No</span>
                                                        </label>
                                                    </p>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" id="emergencyPhone_hideShow" style="display:none">
                                            <div class="col s12 m6">

                                            </div>
                                            <div class="col s12 m6">
                                                <p>Emergency</p>
                                                <div class="input-field col s12 pl-0">
                                                    <input class="text-input phoneno phoneNumber_tab patientPhoneTxtField" type="text" id="emergency_number" asp-for="patientPhoneNumber.EmergencyPhone" placeholder="Enter Emergency Number">
                                                    @*<span class="required" asp-validation-for="patientPhoneNumber.EmergencyPhone"></span>*@
                                                    <span class="required" id="errmsg_emerg"></span>

                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col s12 m6">
                                                <p>Fax</p>
                                                <div class="input-field col s12 pl-0">
                                                    <input class="text-input fax phoneNumber_tab patientPhoneTxtField" type="text" id="Home_fax" asp-for="patientPhoneNumber.Fax" placeholder="Enter Fax Number">
                                                    <span class="required" id="errmsg_fax"></span>

                                                </div>

                                            </div>
                                            @*<div class="col s12 m6">
                                                    <p>Email<span class="required"> * </span></p>
                                                    <div class="input-field col s12 pl-0">
                                                        <input class="text-input" type="email" onkeypress="return AvoidSpace(event)" asp-for="patientPhoneNumber.Email" placeholder="Enter Email Address">
                                                        <span class="required" asp-validation-for="patientPhoneNumber.Email"></span>
                                                    </div>
                                                </div>*@
                                        </div>

                                        @*<div class="row">
                                                <div class="col s12 m6">


                                                    <a class="btn waves-effect waves-light add-btn sidenav-trigger sideout" href="javascript:void(0);" data-target="slide-out-right3">


                                                        Add New Number
                                                    </a>

                                                </div>
                                            </div>*@
                                        <div class="row checkboxcolor">
                                            <div class="col s6 m6 ">
                                                <p class="check-btn">
                                                    <label>
                                                        <input type="checkbox" class="filled-in checkFirst patientPhoneTxtField" asp-for="patientPhoneNumber.IsSMSNotified"  />
                                                        <span>Accept SMS Notification & Reminders</span>
                                                    </label>
                                                </p>
                                            </div>
                                            <div class="col s6 m6">
                                                <p class="check-btn">
                                                    <label>
                                                        <input type="checkbox" class="filled-in checkFirst patientPhoneTxtField" asp-for="patientPhoneNumber.IsEmailNotified"  />
                                                        <span>Accept Email Notification & Reminders</span>
                                                    </label>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col s12 m6">
                                                <p class="check-btn">
                                                    <label>
                                                        <span style="font-size:16px;"> Communication Preference :</span>
                                                    </label>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="row checkboxcolor">

                                            <div class="col s4 m2 mb-2">
                                                <label>
                                                    <input type="checkbox" class="filled-in checkFirst patientPhoneTxtField" asp-for="patientPhoneNumber.IsCommunicationSMS"  />
                                                    <span> SMS</span>
                                                </label>
                                            </div>
                                            <div class="col s4 m2  mb-2">
                                                <label>
                                                    <input type="checkbox" class="filled-in checkFirst patientPhoneTxtField" asp-for="patientPhoneNumber.IsCommunicationPhone"  />
                                                    <span> Phone</span>
                                                </label>
                                            </div>
                                            <div class="col s4 m2 mb-2">
                                                <label>
                                                    <input type="checkbox" class="filled-in checkFirst patientPhoneTxtField" asp-for="patientPhoneNumber.IsCommunicationEmail" />
                                                    <span> Email</span>
                                                </label>
                                            </div>

                                        </div>


                                        <div class="row mb-2">
                                            <div class="col s12 m12" style="text-align:center">
                                                <button type="submit" id="phone_btn" class="btn waves-effect waves-light add-btn">Save</button>

                                                @if (ViewBag.Action == "Update")
                                                {
                                                    <button type="button" data-val="phoneForm" id="phoneEdit_btn" class="btn Recreate patientEditBtn">Edit</button>
                                                    <button type="button" data-val="phoneForm" id="phoneCancel_btn" class="Recreate btn patientCancelBtn">Cancel</button>
                                                }
                                                else
                                                {
                                                    @*<a href="javascript:void(0);" data-val="NewForm" id="phoneEdit_btn" class="btn Recreate">Edit</a>*@
                                                    <a href="javascript:void(0);" data-val="NewForm" id="phoneCancel_btn" onclick="emptyPatientPhoneFields();" class="Recreate btn">Cancel</a>
                                                }

                                            </div>
                                        </div>

                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<aside id="right-sidebar-nav">
    <div id="slide-out-right3" class="slide-out-right-sidenav sidenav rightside-navigation">
        <div class="row">
            <div class="slide-out-right-title">
                <div class="col s12 border-bottom-1 pb-0 pt-1">
                    <div class="row">
                        <div class="col s2 pl-0 center">
                            <i class="material-icons vertical-text-middle"><a href="#" class="sidenav-close">clear</a></i>
                        </div>
                        <div class="col s10 pl-0 mt-2">

                        </div>
                    </div>
                    <div class="row">


                        <form class="col s12">
                            <h5 class="blue-text mb-10">Add New Number</h5>
                            <div class="input-field col s12 mb-10">

                                <input class="text-input" type="number" placeholder="Enter New Number " />
                            </div>

                            <a href="javscript:void(0);" class="modal-action btn add-btn right">Add</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</aside>
