
@model MediClinic.Models.EUOViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}

@section styles{
    <link href="~/app-assets/base/jquery-ui.css" rel="stylesheet" />

    <link href="~/css/timePicker.css" rel="stylesheet" />

}
@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/HunterTimePicker/js/jquery-timepicker.js"></script>
    <script src="~/app-assets/base/jquery-ui.js"></script>

    <script>
        $(".select2").select2();
        $('.selectpicker').selectpicker();
        $(".time-picker").hunterTimePicker();
        $('.datepicker').datepicker({
            changeMonth: true,
            changeYear: true,
            yearRange: "c-100:c+10",
            showButtonPanel: true,
            dateFormat: "mm/dd/yy"
        });
        $(document).ready(function () {
            $('.dropify').dropify();
        });
    </script>
}
<div class="page-wrapper">
    <div class="container">
        <div id="breadcrumbs-wrapper pb-0">
            <div class="row">
                <div class=" col" margin-top-8">
                    <h5 class="breadcrumbs-title color-blue"> New EUO</h5>
                </div>
                <div class="col">
                    <a href="@Url.Action("Index","EUO")" class="waves-effect waves-light float-right">
                        <i class="mdi mdi-arrow-left right arrow-icon"></i>

                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <form class="col-sm-12" asp-action="Add" asp-controller="EUO" method="post" id="EUOForm">
                <input type="hidden" class="text-input" asp-for="EUODto.EUOId" placeholder="id">
                <input type="hidden" class="text-input" asp-for="EUODto.CreatedBy" />
                <input type="hidden" class="text-input" asp-for="EUODto.CreatedDate" />
                <input type="hidden" class="text-input" asp-for="EUODto.VisitId" />

                <div class="row">
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                        <p>
                            Date of EUO
                            <span asp-validation-for="EUODto.Date" class="text-danger"></span>
                        </p>
                        <div class="input-field">
                            <input type="text" asp-for="EUODto.Date" class="datepicker  text-input date-input" placeholder="Date">
                        </div>
                    </div>
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                        <p>
                            Time of EUO
                            <span asp-validation-for="EUODto.Time" class="text-danger"></span>
                        </p>
                        <div class="input-field">
                            <input type="text" asp-for="EUODto.Time" class="time-picker text-input time-input" placeholder="Time">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                        <p>
                            Place of EUO
                            <span asp-validation-for="EUODto.Place" class="text-danger"></span>
                        </p>
                        <div class="input-field">
                            <select id="Place" data-placeholder="--Select--" class="select2 form-control  text-input" asp-for="EUODto.Place"
                                    asp-items="@(new SelectList(Model.PlaceList,"LookupId","LookupValue"))">
                                <option value="" selected disabled></option>
                            </select>
                        </div>
                    </div>

                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                        <p>
                            Represented By
                            <span asp-validation-for="EUODto.RepresentedBy" class="text-danger"></span>
                        </p>
                        <div class="input-field">
                            <select id="RepresentedBy" data-placeholder="--Select--" class="select2 form-control  text-input" asp-for="EUODto.RepresentedBy"
                                    asp-items="@(new SelectList(Model.RepresentedByList,"LookupId","LookupValue"))">
                                <option value="" selected disabled></option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                        <p>
                            Status of EUO
                            <span asp-validation-for="EUODto.Status" class="text-danger"></span>
                        </p>
                        <div class="input-field">
                            <select id="Status" data-placeholder="--Select--" class="select2 form-control  text-input" asp-for="EUODto.Status"
                                    asp-items="@(new SelectList(Model.StatusList,"LookupId","LookupValue"))">
                                <option value="" selected disabled></option>
                            </select>
                        </div>
                    </div>
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                        <p>
                            Reason
                            <span asp-validation-for="EUODto.Reason" class="text-danger"></span>
                        </p>

                        <div class="input-field">
                            <select id="Reason" data-placeholder="--Select--" class="select2 form-control  text-input" asp-for="EUODto.Reason"
                                    asp-items="@(new SelectList(Model.ReasonList,"LookupId","LookupValue"))">
                                <option value="" selected disabled></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12 ">
                        <p>
                            Transcripts
                            <span asp-validation-for="EUODto.Transcripts" class="text-danger"></span>
                        </p>
                        <div class="input-field">
                            <select id="Transcripts" data-placeholder="--Select--" class="select2 form-control  text-input" asp-for="EUODto.Transcripts"
                                    asp-items="@(new SelectList(Model.TranscriptsList,"LookupId","LookupValue"))">
                                <option value="" selected disabled></option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row mt-2 mb-2">
                    <div class="col s12">
                        <div class="center">
                            <button type="submit" class="waves-effect waves-light btn add-btn">Save</button>
                            @*<a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Edit</a>*@
                        <a href="@Url.Action("Index","EUO")" class="waves-effect waves-light Recreate btn">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

