@section styles{
    <style>
        .patient-image {
            width: 100px;
        }

        .p-image {
            width: 130px !important;
        }

        .bodyStatusCardTitle {
            font-size: 12px !important;
            font-weight: bold;
            margin-top: 0px !important;
            margin-bottom: 5px !important;
            color: #1a3a77 !important;
        }

        #cards-extended .card-width .card {
            padding: 22px 15px 22px 15px !important;
        }

            #cards-extended .card-width .card img {
                height: 30px !important;
                width: 30px !important;
                vertical-align: middle !important;
                margin-top: 7px !important;
            }

        .bodyStatusValue {
            font-weight: bold;
            color: black;
        }

        .doc_Infor_Card {
            padding: 10px !important;
        }

        .vertical-align-center {
            background-color: #fff !important;
            color: #bcccf7;
        }


        .padding-right-0 {
            padding-right: 0 !important;
        }

        .margin-top-0 {
            margin-top: 0px !important
        }

        span.avatar-status.avatar-50 > i, span.secondary-content.medium-small {
            display: none;
        }

        span.avatar-status.avatar-50 {
            padding-right: 10px;
        }

        .card-padding-0 {
            padding: 0 !important;
        }

        .margin-bottom-30 {
            margin-bottom: 30px !important;
        }


        .margin-bottom-0 {
            margin-bottom: 0px !important
        }

        .collection .collection-item.avatar {
            min-height: 62px !important;
        }
    </style>
}
@section scripts{
