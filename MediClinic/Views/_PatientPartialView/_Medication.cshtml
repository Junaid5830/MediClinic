    <div class="container">



        @*New Exam*@

        <div class="row">
            <form class="form-inline col s12">
                <div class="row">

                    <div class="col s12 m6">
                        <p>Date of Prescription</p>
                        <div class="input-field col s12 m12 l12 pl-0 mt-0">
                            <input type="text" class="datepicker" placeholder="Select Date">
                        </div>

                    </div>
                    <div class=" col s12 m6">
                        <p>Items or Items Group Name/No</p>

                        <div class="input-field col s12 m12 pl-0 mt-0">
                            <div class="dropdownauto"><input class="text-input input-styling Items" type="text" placeholder="Select Items"></div>
                        </div>
                    </div>


                </div>
                <div class="row">
                    <div class=" col s6 m6">
                        <p>CPT Code</p>

                        <div class="input-field col s12 m12 pl-0 mt-0">
                            <div class="dropdownauto"><input class="text-input input-styling CPT" type="text" placeholder="Select CPT"></div>
                        </div>

                    </div>
                    <div class=" col s6 m6">
                        <p>ICD Code</p>

                        <div class="input-field col s12 m12 pl-0 mt-0">
                            <div class="dropdownauto"><input class="text-input input-styling ICD" type="text" placeholder="Select ICD"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <p>Prescriber</p>

                        <div class="input-field col s12 m12 pl-0 mt-0">
                            <div class="dropdownauto"><input class="text-input input-styling Prescriber" type="text" placeholder="Select Prescriber"></div>
                        </div>

                    </div>
                    <div class=" col s6 m6">
                        <p>Barcode No</p>

                        <div class="input-field col s12 m12 pl-0 mt-0">
                            <div class="dropdownauto"><input class="text-input input-styling Barcode" type="text" placeholder="Select Barcode"></div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <p>Prescription Refference/No</p>
                        <div class="input-field col s12 m12 pl-0 mt-0">
                            <div class="dropdownauto"><input class="text-input input-styling RefferenceNo" type="text" placeholder="Select Refference/No"></div>
                        </div>
                    </div>
                    <div class=" col s6 m6">
                        <p>Status</p>
                        <div class="input-field col s12 m12 pl-0 mt-0">
                            <div class="dropdownauto"><input class="text-input input-styling Status" type="text" placeholder="Select Status"></div>
                        </div>
                    </div>
                </div>
                <div class="row">


                    <div class="col s12 m6">
                        <div class="col s6 pl-0 ">
                            <p>Upload Image</p>
                            <div class="dropify-wrapper"><div class="dropify-message"><span class="file-icon"></span> <p>Drag and drop a file here or click</p><p class="dropify-error">Ooops, something wrong appended.</p></div><div class="dropify-loader"></div><div class="dropify-errors-container"><ul></ul></div><input type="file" id="input-file-now" class="dropify" data-default-file=""><button type="button" class="dropify-clear">Remove</button><div class="dropify-preview"><span class="dropify-render"></span><div class="dropify-infos"><div class="dropify-infos-inner"><p class="dropify-filename"><span class="file-icon"></span> <span class="dropify-filename-inner"></span></p><p class="dropify-infos-message">Drag and drop or click to replace</p></div></div></div></div>
                        </div>

                    </div>


                </div>
                <div class="row mt-1 mb-3">
                    <div class="col s12 m12" style="text-align:center">
                        <a href="javascript:void(0);" class="btn add-btn">Save</a>
                    </div>
                </div>
            </form>

        </div>


    </div>