    <script>
        $(document).ready(function () {
            $('.conditionyes').change(function () {
                if ($(this).prop("checked")) {
                    $('#conditiondiv').show();
                }
            });
            $('.conditionno').change(function () {
                if ($(this).prop("checked")) {
                    $('#conditiondiv').hide();
                }
            });
            $('.requireyes').change(function () {
                if ($(this).prop("checked")) {
                    $('#requirediv').show();
                }
            });
            $('.requireno').change(function () {
                if ($(this).prop("checked")) {
                    $('#requirediv').hide();
                }
            });
            $('.automobileyes').change(function () {
                if ($(this).prop("checked")) {
                    $('#automobilediv').hide();
                }
            });
            $('.automobileno').change(function () {
                if ($(this).prop("checked")) {
                    $('#automobilediv').show();
                }
            });
            $('.injuryyes').change(function () {
                if ($(this).prop("checked")) {
                    $('#injurydiv').show();
                }
            });
            $('.injuryno').change(function () {
