

@{
    ViewData["Title"] = "AddMessageElite";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}


@section styles{
   
    <style>


        .AddReminder p {
            margin-top: 1rem !important;
        }
    </style>
    <link rel="stylesheet" href="~/Elite/node_modules/dropify/dist/css/dropify.min.css">
}
@section scripts{
   
    <script>
        $(function () {

      
            $('.selectpicker').selectpicker();
        });


    </script>
    <script src="~/Elite/node_modules/dropify/dist/js/dropify.min.js"></script>
    <script>
	$(document).ready(function () {
		$('.dropify').dropify();
	});
    </script>
}
<div class="page-wrapper">
    <div class="container">
        <div id="breadcrumbs-wrapper">
            <!-- Search for small screen-->
            
                <div class="row">
                    <div class=" col" margin-top-8">
                        <h5 class="breadcrumbs-title color-blue"> Message</h5>
                    </div>

                    <div class="col">
                        <a class="waves-effect waves-light float-right" style="margin-top:-11px" href="/patientSideElite/MessageListElite">
                            <i class="mdi mdi-arrow-left right arrow-icon"></i>

                        </a>
                    </div>

                </div>
           
        </div>
       
                <div class="row">
                    <form class="col-sm-12  ">
                        <div class="row">
                            <div class=" col ">
                                <p>From</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter From">
                                </div>
                            </div>
                            <div class=" col ">
                                <p>To</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter To">
                                </div>
                            </div>
                        </div>
                        <div class="row">

                        </div>
                        <div class="row">
                            <div class=" col ">
                                <p>Message Date</p>

                                <div class="input-field">
                                    <input type="date" class="text-input" placeholder="select Message Date">
                                </div>
                            </div>
                            <div class=" col ">
                                <p>Message</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Message">
                                </div>
                            </div>

                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col s12">
                                <div class="center">
                                    <a href="javascript:void(0);" class="waves-effect waves-light btn add-btn">Save</a>
                                    <a href="javascript:void(0);" class="Recreate btn">Edit</a>
                                    <a href="javascript:void(0);" class="Recreate btn">Cancel</a>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
          

    </div>
</div>





