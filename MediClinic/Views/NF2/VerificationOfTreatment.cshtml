                    $('#injurydiv').hide();
                }
            });
            $('.injurynono').change(function () {
                if ($(this).prop("checked")) {
                    $('#injurydiv').hide();
                }
            });

            $('.directpayment').change(function () {
                if ($(this).prop("checked")) {
                    $('#healthproviderdiv').hide();
                    $('#directpaymentdiv').show();
                }
            });
            $('.healthprovider').change(function () {
                if ($(this).prop("checked")) {
                    $('#directpaymentdiv').hide();
                    $('#healthproviderdiv').show();
                }
            });


        });
    </script>
