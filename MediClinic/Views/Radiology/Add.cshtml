@using MediClinic.Models.DTOs;
@model RadiologyDto;

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}

@section styles
{

    <style>
        .top_part .card-content {
            padding: 16px !important;
            border-radius: 0 0 2px 2px;
        }

        .top_part {
            margin: 1rem 0 0rem 0 !important;
            border-radius: 0 0 2px 2px;
            box-shadow: 1px 1px 12px 1px #e2e2e2 !important;
        }

        .position-relative {
            position: relative;
        }

        .display-flex {
            display: flex;
        }

        .position-absolute {
            position: absolute;
        }

        .search-icons {
            left: 12px;
            top: 12px;
        }



        .Bill_options {
            margin-top: 0px;
        }
    </style>

}
@section scripts{

    <script>
        var table;
        $(document).ready(function () {

            $('.select-all').click(function () {
                debugger;
                $('table tbody tr th input').prop('checked', this.checked);
            });
            table = $('#myTableClaim').DataTable({
                "lengthMenu": false,
                "lengthChange": false,
                "scrollX": false,
                "searching": false,
                "responsive": true,
                "info": false,
                'order': [], 'columnDefs': [{ "targets": [0, 8], "orderable": false }],

            });

            $('[data-search]').on('keyup', function () {
                table.search(this.value).draw();

            });
        })
        $(function () {

        });
        function deleteRadiology(Id, event) {

            event.closest('tr').remove();
            $.get("/Radiology/Delete", { RadiolId: Id }).done(function (data) {
            });
            $(".checkmark").show().fadeOut(6000);
        }
    </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="page-wrapper">
    <div class="container">
        <div id="breadcrumbs-wrapper">
            <div class="row">
                <div class=" col" margin-top-8">
                    <h5 class="breadcrumbs-title color-blue"> New Radiology</h5>
                </div>
                <div class="col">
                    <a href="@Url.Action("Index","Radiology")" class="waves-effect waves-light float-right" style="margin-top:-11px">
                        <i class="mdi mdi-arrow-left right arrow-icon"></i>

                    </a>
                </div>

            </div>
        </div>
        <div class="row">
            <form class="col-sm-12" asp-action="Add" asp-controller="Radiology" method="post" id="RadiologyForm">
                <input type="hidden" class="text-input" asp-for="@Model.Id" placeholder="id">
                <div class="row">
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12">
                        <p>Radiology Name</p>

                        <div class="input-field">
                            <input type="text" asp-for=@Model.RadiologyName class="text-input" placeholder="Enter Pharmacy Name">
                            <span class="required" asp-validation-for="@Model.RadiologyName"></span>
                        </div>
                    </div>

                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12">
                        <p>Name</p>

                        <div class="input-field">
                            <input type="text" asp-for=@Model.Name class="text-input" placeholder="Enter Name">
                            <span class="required" asp-validation-for="@Model.Name"></span>
                        </div>
                    </div>


                </div>
                <div class="row">
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12">
                        <p>Email</p>

                        <div class="input-field">
                            <input type="text" asp-for=@Model.Email class="text-input" placeholder="Enter Email">
                            <span class="required" asp-validation-for="@Model.Email"></span>
                        </div>
                    </div>
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12">
                        <p>Phone</p>

                        <div class="input-field">
                            <input type="text" asp-for=@Model.Phone class="text-input" placeholder="Enter Phone">
                            <span class="required" asp-validation-for="@Model.Phone"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class=" col-sm-6 col-md-6 col-xl-6 col-12">
                        <p>Address</p>

                        <div class="input-field">
                            <input type="text" asp-for=@Model.Address class="text-input" placeholder="Enter Address Line 1">
                            <span class="required" asp-validation-for="@Model.Address"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-2 mb-2">
                    <div class="col s12">
                        <div class="center">
                            <button type="submit" class="waves-effect waves-light btn add-btn">Save</button>
                            <a href="@Url.Action("Index","Radiology")" class="waves-effect waves-light Recreate btn">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
