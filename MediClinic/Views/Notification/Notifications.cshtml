@model MediClinic.Models.NotificationViewModel
@using MedliClinic.Utilities.Utility
@{
    ViewData["Title"] = "Notifications";
    Layout = ViewBag.Layout;
}


@section styles
{
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/pages/app-todo.css">
    <style>
        .app-todo .content-area {
            width: 100% !important;
            margin-top: 26px;
        }

        .collection {
            height: auto !important;
            overflow: auto scroll;
        }

        .badge {
            margin-left: 0px !important;
        }
        .collection .collection-item {
            line-height: 1.5rem;
            margin: 0;
            padding: 10px 20px;
            border-bottom: 1px solid #e0e0e0;
            background-color: #fff;
        }
        .grey.lighten-2 {
            background-color: #e0e0e0 !important;
        }
        .purple-text {
            color: #9c27b0 !important;
        }
    </style>
}
@section scripts
{
    <script src="~/app-assets/js/scripts/app-todo.js" type="text/javascript"></script>


}

<div class="page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l2 margin-top-8">
                <h5 class="breadcrumbs-title color-blue ml-3 mt-5">Notifications</h5>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
        
                    <div class="app-todo">
                        <div class="content-area content-right">
                            <div class="app-wrapper">
                                <div class="card card card-default scrollspy border-radius-6 fixed-width">
                                    <div class="card-content p-0">

                                        <ul class="collection todo-collection">
                                            @{
                                                if (Model.GetNotifications != null)
                                                {
                                                    foreach (var item in Model.GetNotifications.OrderByDescending(x => x.Id))
                                                    {

                                                        <li class="collection-item">

                                                            <div class="list-content">
                                                                <div class="list-title-area">
                                                                    <span class="badge grey lighten-2">
                                                                        <i class="purple-text mdi mdi-brightness-1 small-icons mr-2">
                                                                        </i>@item.NotificationType
                                                                    </span>
                                                                </div>
                                                                <div class="list-desc">
                                                                    @item.NotificationInfo
                                                                </div>
                                                            </div>
                                                            <div class="list-right">
                                                                @if (item.CreatedDate != null)
                                                                {
                                                                    <div class="list-date">
                                                                        @DateTimeExtensions.GetConvertedDateToAgo(Convert.ToDateTime(item.CreatedDate))
                                                                    </div>
                                                                }
                                                            </div>
                                                        </li>
                                                    }
                                                }
                                            }
                                        </ul>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
               
            </div>
        </div>

        </div>
        </div>
