<div class="page-wrapper">
    <div class="container">

        <div id="breadcrumbs-wrapper">
            <!-- Search for small screen-->

            <div class="row">
                <div class="col-sm-3 col-md-3 col-lg-3" margin-top-8">
                    <h5 class="breadcrumbs-title color-blue">DME</h5>
                </div>
                <div class="col-sm-9 col-md-5 col-lg-5" display-block">
                    <div class="header-search-wrapper  display-flex position-relative">
                        <i class="ti-search position-absolute  search-icons"></i>
                        <input type="text" class="form-control set_Place search-box z-depth-2" placeholder="Search" aria-label="Username" aria-describedby="basic-addon11">
                        <a class="btn ml-2 search-btn">
                            Search
                        </a>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4 col-lg-4">

                    <a href="@Url.Action("AddDME","DME")" class="btn  float-right add-btn set_smallscreen">
                        Add New DME
                    </a>
                </div>

            </div>

        </div>
        <div class="row">

            <div class="col-sm-9 col-md-9 col-lg-9">

                @*<button class="btn btn-primary dropdown-toggle batch_button" type="button" data-toggle="dropdown">*@
                    @*Batch Actions*@
                    @*<span class="caret"></span>*@
                </button>
                @*<ul class="dropdown-menu batch">*@
                    @*<li><a href="#">Option 1</a></li>*@
                    @*<li><a href="#">Option 2</a></li> Comment batch action*@

                </ul>

            </div>


        </div>

        <div class="row tablee">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="myTableClaim" class="table dataTables_wrapper">
                        <thead>
                            <tr class="uppercase">
                                <th>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input select-all" data-val="all" id="selectAll">
                                        <label class="custom-control-label" for="selectAll" style="--bubble-color:#5a5a5a"></label>
                                    </div>

                                </th>
                                <th>RX IMAGE</th>
                                <th>DATE OF PRESCRIPTION</th>
                                <th>ITEMS</th>
                                <th>CPT CODE</th>
                                <th>ICD CODE</th>
                                <th>PRESCRIBER</th>
                                <th>BARCODE NO</th>
                                <th>PRESCRIPTION REF. NO</th>
                                <th>STATUS</th>
                                <th class="all">Action  </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loop in Model.DMEDtoList)
                            {
                                <tr class="card" style="cursor: pointer">
                                    <th>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="@loop.DMEId" value="check">
                                            <label class="custom-control-label" for="@loop.DMEId"></label>
                                        </div>

                                    </th>

                                    <td>@loop.ImageUrl</td>
                                    <td>@loop.PrescriptionDate</td>
                                    <td>@loop.ItemId</td>
                                    <td>@loop.CPTCodeId</td>
                                    <td>@loop.ICDCodeId</td>
                                    <td>@loop.PrescriberId</td>
                                    <td>@loop.BarcodeNo</td>
                                    <td>@loop.PrescriptionRefNo</td>
                                    <td>@loop.IsActive</td>
                                    <td class="action">
                                        <button class="btn btn-primary dropdown-toggle table_btn" type="button" data-toggle="dropdown">
                                            Options
                                            @*<span class="caret"></span>*@
                                        </button>
                                        <ul class="dropdown-menu Table_Drop ul_Caim">


                                            <li><a href="javascript:void(0);">View</a></li>
                                            <li><a href="/DME/DeleteDME?DMEId=@loop.DMEId">Delete</a></li>
                                            <li><a href="/DME/AddDME?DMEId=@loop.DMEId">Edit</a></li>
                                        </ul>

                                    </td>
                                </tr>
                            }
                     
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

