    ViewData["Title"] = "EditCurrentLocationInFacilityElite";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}




@section styles{
   
    <style>


        .AddLocation p {
            margin-top: 1rem !important;
        }
    </style>

}
@section scripts{
  
  
   
    <script>
        $(function () {

            //$(".select2").select2(
