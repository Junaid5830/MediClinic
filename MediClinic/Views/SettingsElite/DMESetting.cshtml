                                            <tr class="card">
                                                <td>@item.ItemDescription</td>
                                                <td>@item.Manufacture.Manufactures</td>
                                                <td>@item.MakeNameModel.Make</td>
                                                <td>@item.Model</td>
                                                <td>@item.SerialNumber</td>
                                                <td>@item.StockNumber</td>
                                                <td>@item.TotalInventoryQuantity</td>
                                                <td>@item.ExistingQuantity</td>
