    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}


@section styles{
  
    <style>


        .AddReminder p {
            margin-top: 1rem !important;
        }
    </style>
}
@section scripts{
  
    <script>
        $(function () {

          
            $('.selectpicker').selectpicker();
        });


    </script>
<script>
	$(document).ready(function () {
