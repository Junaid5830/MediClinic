@model MediClinic.Models.PatientViewModel
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-content">
                    <div class="container">


                        <div class="card-title">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h4 class="card-title">CURRENT MEDICATIONS HISTORY</h4>
                                </div>
                            </div>
                        </div>
                        <div id="MHPastMedicationHistoryGrid">
                            @*<partial name="../_PatientPartialView/_ManageMHPastMedicationHistory" />*@
                            <partial name="../_MedicalHistoryPartial/_ManageMHPastMedicationHistory.cshtml" />

                        </div>
                        <form asp-action="SaveMHPastMedicationHistory" asp-controller="PatientMedicalHistory" method="post" data-ajax="true" data-ajax-success="onMHPastMedicationHistorySucess(data)" id="CurrentMedicationForm">
                            @Html.TextBoxFor(model => model.MHPastMedicationHistory.PatientId, new { @class = "form-control", @Id = "", @style = "display:none" })
                            @Html.TextBoxFor(model => model.MHPastMedicationHistory.Id, new { @class = "form-control", @Id = "MHPastMedicationHistoryId", @style = "display:none" })

                            <div class="row current">
                                <div class="col-md-6">
                                    <p>Medicine <span class="required"> * </span></p>
                                    <div id="medicineId">
                                        <select data-placeholder="Select Medicine" class="select2" asp-for="MHPastMedicationHistory.Name" id="PastMedicationName" asp-items="@(new SelectList(Model.MedicineList, "Value", "Text"))">
                                            <option value="" selected disabled></option>
                                        </select>
                                        <span class="required" id="MHPastMedicationHistory_Name_err"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <p class="content-p">Reason For Taking Medicine</p>
                                    <input class="text-input" asp-for="MHPastMedicationHistory.ReasonForMedicine" type="text" placeholder="Reson for taking medicine">
                                    <span class="required" asp-validation-for="MHPastMedicationHistory.ReasonForMedicine"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="content-p">Dose</p>
                                    <input class="text-input" asp-for="MHPastMedicationHistory.Dose" type="text" placeholder="Dose">
                                    <span class="required" asp-validation-for="MHPastMedicationHistory.Dose"></span>

                                </div>
                                <div class="col-md-6">
                                    <p>Frequency</p>
                                    
                                        <select data-placeholder="Select Frequency" class="select2" asp-for="MHPastMedicationHistory.DoseFrequency" id="PastMedicationDoseFrequency" asp-items="@( new List<SelectListItem>{
                                                                 new SelectListItem() {Text = "Once", Value="Once"},
                                                new SelectListItem() {Text = "Daily", Value="Daily"},
                                                new SelectListItem() {Text = "Two Times a day", Value="Two Times a day"},
                                                new SelectListItem() {Text = "Three Times a day", Value="Three Times a day"},
                                                new SelectListItem() {Text = "Four Times a day", Value="Four Times a day"},
                                                new SelectListItem() {Text = "Five Times a day", Value="Five Times a day"},
                                                new SelectListItem() {Text = "Six Times a day", Value="Six Times a day"},
                                                new SelectListItem() {Text = "Before Bed", Value="Before Bed"},
                                                new SelectListItem() {Text = "Before Breakfast", Value="Before Breakfast"},
                                                new SelectListItem() {Text = "Before Lunch", Value="Before Lunch"},
                                                new SelectListItem() {Text = "Before Dinner", Value="Before Dinner"},
                                                new SelectListItem() {Text = "Before meals", Value="Before meals"},
                                                new SelectListItem() {Text = "Every 1 hour", Value="Every 1 hour"},
                                                new SelectListItem() {Text = "Every 2 hour", Value="Every 2 hour"},
                                                new SelectListItem() {Text = "Every 3 hour", Value="Every 3 hour"},
                                                new SelectListItem() {Text = "Every 4 hour", Value="Every 4 hour"},
                                                new SelectListItem() {Text = "Every 5 hour", Value="Every 5 hour"},
                                                new SelectListItem() {Text = "Every 6 hour", Value="Every 6 hour"},
                                                new SelectListItem() {Text = "Every 7 hour", Value="Every 7 hour"},
                                                new SelectListItem() {Text = "Every week", Value="Every week"},
                                                new SelectListItem() {Text = "Once a month", Value="Once a month"}
                                         })">
                                            <option value="">Select Frequency</option>
                                        </select>
                                   
                                </div>
                                <div class="col-md-6 mt-2">
                                    @*<p>
                                        <label class="padding-right-10">
                                            <input type="checkbox" asp-for="MHPastMedicationHistory.AsNeeded" class="filled-in">
                                            <span>As Needed</span>
                                        </label>
                                    </p>*@
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input select-all" id="selectAll" asp-for="MHPastMedicationHistory.AsNeeded">
                                        <label class="custom-control-label" for="selectAll">As Needed</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="content-p">Doctor Name</p>
                                    <input class="text-input" asp-for="MHPastMedicationHistory.DocName" type="text" placeholder="Doctor Name">
                                    <span class="required" asp-validation-for="MHPastMedicationHistory.DocName"></span>

                                </div>
                                <div class="col-md-6">
                                    <p class="content-p">Doctor Number</p>
                                    <input class="text-input" asp-for="MHPastMedicationHistory.DocNumber" type="text" placeholder="Doctor Number">
                                    <span class="required" asp-validation-for="MHPastMedicationHistory.DocNumber"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="content-p">Pharmacy Name</p>
                                    <input class="text-input" asp-for="MHPastMedicationHistory.PharName" type="text" placeholder="Pharmacy Name">
                                    <span class="required" asp-validation-for="MHPastMedicationHistory.PharName"></span>

                                </div>
                                <div class="col-md-6">
                                    <p class="content-p">Pharmacy Number</p>
                                    <input class="text-input" asp-for="MHPastMedicationHistory.PharNumber" type="text" placeholder="Pharmacy Number">
                                    <span class="required" asp-validation-for="MHPastMedicationHistory.PharNumber"></span>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="content-p">Notes</p>
                                    <input class="text-input" asp-for="MHPastMedicationHistory.Notes" type="text" placeholder="Notes">
                                    <span class="required" asp-validation-for="MHPastMedicationHistory.Notes"></span>

                                </div>

                            </div>
                            <div class="row mt-2 mb-2">
                                <div class="col" style="text-align:center">
                                    <button class="btn add-btn FooterBtn medical1" id="SaveCurrentMedicationForm" type="submit">Save</button>
                                    <button type="reset" class="Recreate btn">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>