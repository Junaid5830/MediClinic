@model MediClinic.Models.AppointmentViewModel
@{
    ViewData["Title"] = "CurrentAppointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles
{
    <style>
        .card .card-content {
            padding: 8px;
            border-radius: 0 0 2px 2px;
        }

        hr {
            border-top: 8px solid #177e64;
            border-radius: 10px;
        }

        .smallCap {
            border: 2px solid #177e64;
            background-color: #167f64;
            border-radius: 25px;
            /* padding: 5px; */
            width: 73px;
            text-align: center;
            height: 20px;
            /* margin-top: 3px; */
            margin: 0px auto;
            margin-bottom: -10px;
        }

            .smallCap p {
                color: white;
                font-size: 12px;
            }

        .set_Number {
            background-color: #167f64;
            border-radius: 25px;
            padding: 5px;
            margin-bottom: 5px;
        }

        .set_Name {
            border: 2px solid #177e64;
            margin-bottom: 10px;
            border-radius: 16px;
            padding: 5px;
        }

            .set_Name p {
                font-size: 12px;
                font-weight: 400;
                color: #177e64;
                text-align: center;
            }

        @@media (max-width:601px) {
            .set_ONSmallScreen {
                padding-right: 1rem !important;
            }
        }

        .set_a {
            font-size: 24px;
            color: black;
            cursor: pointer;
        }

        .done-appointment {
            float: right;
            color: #fff;
            cursor: pointer;
            font-size: 30px;
            margin-right: 5px;
        }
    </style>


}
@section scripts
{
    <script>
        $(document).ready(function () {
            $(".center>.set_Number>a>span").not(':first').css({ "color": "#167f64", "opacity": 0, "pointer-events": 'none' });
            $('.tooltipped').tooltip();
        });
        function completeAppointment(id) {
            $.ajax({
                type: "POST",
                url: "/Appointment/CompleteAppointment",
                data: { Id: id },
                success: function (data) {
                    new PNotify({
                        title: 'Success!',
                        text: 'Appointment Completed Successfully',
                        delay: 2500,
                        type: 'success',
                        addclass: 'pnotify-center'
                    });
                    $("#queueAppointment").empty();
                    $("#queueAppointment").html(data);
                    $(".center>.set_Number>a>span").not(':first').css({ "color": "#167f64", "opacity": 0, "pointer-events": 'none' });
                }
            });
        }

    </script>
}
<div id="breadcrumbs-wrapper">
    <!-- Search for small screen-->
    <div class="container">
        <div class="row">
            <div class="col s6 m6 ">
                <h5 class="breadcrumbs-title color-blue mt-0">Patient Queue</h5>
            </div>

            <div class="col s6 m6 ">
                <a class="btn waves-effect waves-light float-right add-btn" style=" margin-top: -1px; " href="@Url.Action("PatientQueue")" target="_blank">
                   Appointment Queue Design
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <div class="container">
            <div class="row">
                <div class="col s6 m6 l3">
                    <div id="queueAppointment">
                        <partial name="~/Views/Appointment/_AppointmentQueue.cshtml" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

