                    <form class="col-sm-12  ">
                        <div class="row">
                            <div class=" col-md-6">
                                <p>Reminder Date</p>

                                <div class="input-field">
                                    <input type="date" class="text-input" placeholder="select date">
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <p>
                                    Reminder Type

                                </p>

                                <div class="input-field">
                                    <select class="select2 form-control  text-input" style="width: 100%;">
                                        <option>Select</option>

                                        <option value="AK">Dr Aibolt</option>
                                        <option value="HI">Dr Jack</option>


                                    </select>
                                </div>

                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-6 ">
                                <p>
                                    Reminder by

                                </p>

                                <div class="input-field">
                                    <select class="select2 form-control  text-input" style="width: 100%;">
                                        <option>Select</option>

                                        <option value="AK">Dr Aibolt</option>
                                        <option value="HI">Dr Jack</option>


                                    </select>
                                </div>

                            </div>
                            <div class=" col-md-6 ">
                                <p>Reminders</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Reminders">
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class=" col-md-6 ">
                                <p>Due Date</p>

                                <div class="input-field">
                                    <input type="date" class="text-input" placeholder="select date">
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <p>
                                    Reminder by
                                </p>
                            <input type="file" id="input-file-now-custom-2" class="dropify" data-height="100" />
                              </div>
                        </div>
                        <div class="row mt-2 mb-2">
                            <div class="col s12">
                                <div class="center">
                                    <a href="javascript:void(0);" class="waves-effect waves-light btn add-btn">Save</a>
                                    <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Edit</a>
                                    <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
         

    </div>
</div>




