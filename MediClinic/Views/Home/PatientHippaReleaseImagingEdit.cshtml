
@{
    ViewData["Title"] = "PatientHippaReleaseImagingEdit";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

@section styles{ 
    <style>
        .input-field{
            margin: 0 auto
        }
    </style>
}
@section scripts{
    <script>
        $(document).ready(function () {

            $('.Diagnosis').autocomplete({
                data: {
                    "Tear": null,
                },
                limit: 10,
                minLength: 0
            });
            $('.Reported').autocomplete({
                data: {
                    " Smart Guy, Esq": null,
                    "Rosy": null,
                },
                limit: 10,
                minLength: 0
            });
            $('.Type').autocomplete({
                data: {
                    "Shoulder MRI": null,
                },
                limit: 10,
                minLength: 0
            });
            $('.Report').autocomplete({
                data: {
                    "Created": null,
                },
                limit: 10,
                minLength: 0
            });
            $('.Film').autocomplete({
                data: {
                    "Yes": null,
                    "No": null,
                },
                limit: 10,
                minLength: 0
            });

        });
    </script>
}
<div id="breadcrumbs-wrapper">
    <!-- Search for small screen-->
    <div class="container">
        <div class="row">
            <div class="col s6 m6 ">
                <h5 class="breadcrumbs-title color-blue mt-0">Imaging</h5>
            </div>

            <div class="col s6 m6 ">
                <a class="waves-effect waves-light float-right mr-2" style="margin-top: -1px;" href="/Home/PatientHippaReleaseImaging">
                    <i class="material-icons  right arrow-icon">arrow_back</i>

                </a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s12">
            <form class="form-inline ">
                <div class="row">
                    <div class="col s12 m6">
                        <div class="input-field">
                            <p>Date of Imaging</p>
                            <input type="text" class="datepicker" placeholder="Select Date">
                        </div>

                    </div>
                    <div class="col s12 m6">
                        <div class="input-field">
                            <p>Time Of Imaging</p>

                            <input type="text" class="timepicker" placeholder="Select Time">
                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="col s12 m6">
                        <div class="input-field">
                            <p>Reported By</p>
                            <div class="dropdownauto"><input class="text-input input-styling Reported" type="text" placeholder="Select Reported By"></div>
                        </div>
                    </div>
                    <div class=" col s12 m6">

                        <div class="input-field">
                            <p>Type Of Image</p>

                            <div class="dropdownauto"><input class="text-input input-styling Type" type="text" placeholder="Select Type of Image"></div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col s12 m6">
                        <div class="input-field">
                            <p>Report Status</p>
                            <div class="dropdownauto"><input class="text-input input-styling Report" type="text" placeholder="Select Report Status"></div>
                        </div>
                    </div>
                    <div class=" col s12 m6">

                        <div class="input-field">
                            <p>Image Film</p>

                            <div class="dropdownauto"><input class="text-input input-styling Film" type="text" placeholder="Select Image Film"></div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col s12 m6">
                        <div class="input-field">
                            <p>Diagnosis</p>
                            <div class="dropdownauto"><input class="text-input input-styling Diagnosis" type="text" placeholder="Select Diagnosis"></div>
                        </div>
                    </div>

                </div>
                <div class="row mt-2 mb-2">
                    <div class="col s12 m12" style="text-align:center">
                        <a href="javascript:void(0);" class="btn add-btn">Save</a>
                        <a href="javascript:void(0);" class="Recreate btn">Edit</a>
                        <a href="@Url.Action("PatientHippaReleaseImaging", "Home")" class="Recreate btn">Cancel</a>
                    </div>
                </div>
            </form>

        </div>

    </div>
</div>



