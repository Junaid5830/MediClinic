

@{
    ViewData["Title"] = "AddNewImage";
    Layout = "~/Views/Shared/_LayoutElite.cshtml";
}


@section styles{
    <link href="~/Elite/node_modules/select2/dist/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Elite/node_modules/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
    <style>


        .AddReminder p {
            margin-top: 1rem !important;
        }
    </style>
    <link rel="stylesheet" href="~/Elite/node_modules/dropify/dist/css/dropify.min.css">
}
@section scripts{
    <script src="~/Elite/node_modules/select2/dist/js/select2.full.min.js" type="text/javascript"></script>

    <script src="~/Elite/node_modules/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>
    <script>
        $(function () {

            $(".select2").select2();
            $('.selectpicker').selectpicker();
        });


    </script>
    <script src="~/Elite/node_modules/dropify/dist/js/dropify.min.js"></script>
    <script>
	$(document).ready(function () {
		$('.dropify').dropify();
	});
    </script>
}
<div class="page-wrapper">
    <div class="container-fluid">
        <div id="breadcrumbs-wrapper">
            <!-- Search for small screen-->
            <div class="container">
                <div class="row">
                    <div class=" col" margin-top-8">
                        <h5 class="breadcrumbs-title color-blue"> New Radiology</h5>
                    </div>

                    <div class="col">
                        <a class="waves-effect waves-light float-right" style="margin-top:-11px">
                            <i class="mdi mdi-arrow-left right arrow-icon"></i>

                        </a>
                    </div>

                </div>
            </div>
        </div>
        <section class="AddReminder">
            <div class="container" style="max-width:100%;">
                <div class="row">
                    <form class="col-sm-12  ">
                        <div class="row">
                            <div class=" col ">
                                <p>Radiology Name</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Radiology Name">
                                </div>
                            </div>

                            <div class=" col ">
                                <p>Name</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Name">
                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class=" col ">
                                <p>Email</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Email">
                                </div>
                            </div>
                            <div class=" col ">
                                <p>Phone</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Phone">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class=" col ">
                                <p>Address Line 1</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Address Line 1">
                                </div>
                            </div>
                            <div class=" col ">
                                <p>Address Line 2</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Address Line 2">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class=" col-sm-6 ">
                                <p>Address Line 3</p>

                                <div class="input-field">
                                    <input type="text" class="text-input" placeholder="Enter Address Line 3">
                                </div>
                            </div>
                        </div>
                            <div class="row mt-2 mb-2">
                                <div class="col s12">
                                    <div class="center">
                                        <a href="javascript:void(0);" class="waves-effect waves-light btn add-btn">Save</a>
                                        <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Edit</a>
                                        <a href="javascript:void(0);" class="waves-effect waves-light Recreate btn">Cancel</a>
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </section>

    </div>
</div>






